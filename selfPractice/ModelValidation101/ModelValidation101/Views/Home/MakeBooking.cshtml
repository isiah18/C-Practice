@model ModelValidation101.Models.Appointment

@{
    ViewBag.Title = "MakeBooking";
}

<h2>MakeBooking</h2>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <div class="form-group">
        <p>@Html.ValidationMessageFor(m=>m.ClientName)</p>
        <p>@Html.LabelFor(m => m.ClientName): @Html.EditorFor(m => m.ClientName)</p>
    </div>
    <div class="form-group">
        <p>@Html.ValidationMessageFor(m => m.Date)</p>
        <p>@Html.LabelFor(m => m.Date): @Html.EditorFor(m => m.Date)</p>
    </div>
    <div class="form-group">
        <p>@Html.ValidationMessageFor(m => m.TermsAccepted)</p>
        <p>@Html.EditorFor(m => m.TermsAccepted) I accept the terms</p>
    </div>
    <input type="Submit" value="Make Booking" class="btn btn-primary"/>
}